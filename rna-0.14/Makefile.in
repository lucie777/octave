# -*-Makefile-*-

PREFIX =
export RNA_HOME =

all:
	make -C build all

install:
	mkdir -p $(PREFIX)/bin
	cp -a bin/* $(PREFIX)/bin
	mkdir -p $(PREFIX)/lib
	cp -a lib/* $(PREFIX)/lib
	mkdir -p $(PREFIX)/include
	cp -a include $(PREFIX)/include

clean:
	make -C build clean

distclean:
	make -C build realclean
	rm Makefile